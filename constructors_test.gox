package main

import (
	"context"
	"fmt"
	"strconv"
	"testing"
	"time"

	"github.com/stretchr/testify/assert"
	"github.com/stretchr/testify/require"
)

func TestConstructor(t *testing.T) {
	sock := "127.0.0.1:6379"

	c, errNew := NewRedisClient(sock, 1)
	require.NoError(t, errNew)
	require.NotNil(t, c)

	defer c.Close()

	kv := KV{
		key:   strconv.FormatInt(time.Now().Unix(), 10),
		value: "y",
	}

	ctx := context.Background()

	errSet := c.Set(ctx, kv)
	require.NoError(t, errSet, "operation set")

	value, errGet := c.Get(ctx, kv.key)
	assert.ErrorIs(t, errGet, errNil)

	assert.NoError(t, errGet, fmt.Sprintf("operation get: %s", errGet))
	require.Equal(t, kv.value, value)
}
